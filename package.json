{
  "name": "zotero-mcp",
  "version": "1.0.0",
  "description": "MCP server for Zotero research library integration - provides full context from Zotero to LLMs",
  "main": "dist/index.js",
  "bin": {
    "zotero-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drxaibi/zotero-mcp.git"
  },
  "homepage": "https://github.com/drxaibi/zotero-mcp#readme",
  "bugs": {
    "url": "https://github.com/drxaibi/zotero-mcp/issues"
  },
  "keywords": [
    "mcp",
    "zotero",
    "research",
    "bibliography",
    "citations",
    "llm",
    "ai",
    "model-context-protocol",
    "claude",
    "anthropic"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "better-sqlite3": "^12.6.2",
    "pdf-parse": "^2.4.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.2",
    "@types/pdf-parse": "^1.1.5",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
